@if (BlackJackCard.FaceUp)
{
    <img class="mr-2" width="150" src="@($"images/{(int)(BlackJackCard.FaceValue)}{Enum.GetName(BlackJackCard.Suit)?.Substring(0,1)}.svg")" alt="Card" />
} else
{
    <img width="150" src="images/BACK.svg" alt="Closed Card" />
}
@code {
    [Parameter] public BlackJackCard BlackJackCard { get; set; }
}